<div class="bg-gray-900 text-gray-100 p-6 min-h-screen">
  <h1 class="font-bold text-4xl text-white">Home#index</h1>
  <p class="text-gray-400">Find me in app/views/home/index.html.erb</p>
  <% if authenticated? %>
    <p class="text-gray-300">You are authenticated.</p>
    <p class="text-gray-300">hi <%= Current.user.email_address %></p>
    <%= button_to "Sign out", session_path, 
        method: :delete, 
        class: "px-4 py-2 bg-red-600 text-white rounded-lg hover:bg-red-700" %>
  <% else %>
  <% end %>
  <%= turbo_stream_from "messages" %>
  <div id="messages" class="space-y-2 mb-4 h-96 overflow-y-auto bg-gray-800 p-4 rounded-lg">
    <%= render @messages %>
  </div>
  <% if authenticated? %>
    <%= form_with(model: Message.new, class: "space-y-2") do |f| %>
      <div class="flex gap-2">
        <%= f.text_field :content,
          class: "flex-1 rounded-lg bg-gray-800 border-gray-700 text-white placeholder-gray-400 shadow-sm focus:border-blue-500 focus:ring focus:ring-blue-500/50",
          placeholder: "Type your message...",
          required: true %>
        <%= f.submit "Send",
          class: "px-4 py-2 bg-blue-600 text-white rounded-lg hover:bg-blue-700" %>
      </div>
    <% end %>
  <% else %>
    <div class="rounded-lg bg-gray-800 p-4 text-center">
      <%= link_to "Sign in to chat", new_session_path, class: "text-blue-400 hover:text-blue-300" %>
    </div>
  <% end %>
</div>